{% extends 'Admin/base.html.twig' %}

{% block _header %}
    {{ include('Admin/partials/header.html.twig') }}
{% endblock %}

{% block _page_content %}

    <h1>Gestion des messages</h1>

    <section class="section">
        <h2>Liste des messages existants</h2>
        {% if EmailList %}
            {% for email in EmailList %}
                <div class="message view{{ email.view }}">
                    {{ email.firstName }} {{ email.lastName }} vous a écrit le {{ email.date|date("d/m/Y") }} à {{ email.date|date("G:i:s") }}
                    <a href="{{ path('email_show', { 'id' : email.id } )}}">Voir le message</a>
                    <a href="{{ path('email_delete', { 'id' : email.id } )}}">Supprimer le message</a>
                </div>
            {% endfor %}
        {% else %}
            Aucun message pour le moment
        {% endif %}
    </section>



{% endblock %}